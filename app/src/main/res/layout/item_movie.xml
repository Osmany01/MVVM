<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_card_margin"
    android:layout_marginTop="@dimen/default_card_margin"
    android:layout_marginRight="@dimen/default_card_margin"
    android:layout_marginBottom="@dimen/default_card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_movie_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="@dimen/dafault_item_card_minHeight"
            android:scaleType="centerCrop" />

        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_fav"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:layout_below="@+id/iv_main_movie_image"
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/default_text_title" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>